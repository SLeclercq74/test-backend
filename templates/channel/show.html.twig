{% extends 'base.html.twig' %}

{% block title %}Channel{% endblock %}

{% block body %}
    <h1>Channel</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ channel.id }}</td>
            </tr>
            <tr>
                <th>Num</th>
                <td>{{ channel.num }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ channel.name }}</td>
            </tr>
            <tr>
                <th>Creation_date</th>
                <td>{{ channel.creationDate ? channel.creationDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Language</th>
                <td>{{ channel.language }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('channel_index') }}">back to list</a>

    <a href="{{ path('channel_edit', {'id': channel.id}) }}">edit</a>

    {{ include('channel/_delete_form.html.twig') }}
